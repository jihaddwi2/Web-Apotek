<div class="container" style="margin-bottom: 60px;">
    <h3 class="text-primary">List Alamat</h3>
    <hr>

    <ul class="list-group">
        <% transaksi.forEach(element=> { %>
            <li class="list-group-item">
                <div class="row">
                    <!-- areanya no faktur -->
                    <div class="col-lg-2">
                        <small>No Faktur</small>
                        <h6>
                            <%= element.no_faktur %>
                        </h6>
                    </div>

                    <!-- area tanggal transaksi -->
                    <div class="col-lg-3">
                        <small>Tgl Transaksi</small>
                        <h6>
                            <%= element.tgl_transaksi %>
                        </h6>
                    </div>

                    <!-- area nama_customer -->
                    <div class="col-lg-3">
                        <small>Nama Customer</small>
                        <h6>
                            <%= element.nama_customer %>
                        </h6>
                    </div>

                    <!-- area apoteker -->
                    <div class="col-lg-3">
                        <small>Nama Apoteker</small>
                        <h6>
                            <%= element.nama_apoteker %>
                        </h6>
                    </div>

                    <!-- tombol hapus -->
                    <div class="col-lg-1">
                        <a href="/transaksi/<%= element.id %>">
                            <button class="btn btn-sm btn-danger">
                               Hapus 
                            </button>
                        </a>
                    </div>

                </div>
                <h5 class="mt-2">Daftar Pembelian</h5>
                <ul class="list-group">
                    <% element.detail.forEach(item=> { %>
                        <li class="list-group-item bg-info">
                            <div class="row">
                                <!-- area untuk nama_obat -->
                                <div class="col-lg-4">
                                    <small class="text-black">Nama Obat</small>
                                    <h6 class="fst-italic ">
                                        <%= item.nama_obat %>
                                    </h6>
                                </div>
                                <!-- area untuk jumlah beli -->
                                <div class="col-lg-2">
                                    <small class="text-black">Jumlah Beli</small>
                                    <h6 class="fst-italic">
                                        <%= item.jumlah_beli %>
                                    </h6>
                                </div>
                                <!-- area untuk harga_beli -->
                                <div class="col-lg-3">
                                    <small class="text-black">Harga</small>
                                    <h6 class="fst-italic">
                                        <%= item.harga_beli %>
                                    </h6>
                                </div>
                                <!-- area untuk total -->
                                <div class="col-lg-3">
                                    <small class="text-black">Total</small>
                                    <h6 class="fst-italic">
                                        <%= item.jumlah_beli * item.harga_beli %>
                                    </h6>
                                </div>
                            </div>
                        </li>
                        <% }) %>
                </ul>
            </li>
            <% }) %>
    </ul>
</div>